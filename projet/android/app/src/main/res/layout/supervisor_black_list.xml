<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container_blacklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/black_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/row_padding_vertical"
            android:layout_marginTop="@dimen/row_padding_vertical"
            android:layout_marginRight="@dimen/row_padding_vertical"
            android:dividerHeight="@dimen/row_padding_vertical" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>